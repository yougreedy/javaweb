<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

<settings>
 <!-- 조회결과를 자바객체에 담을때, 
  밑줄표기법의 칼럼명과 낙타표기법의 자바속성(변수)명을 자동 연결-->
   <setting name="mapUnderscoreToCamelCase" value="true"/>
</settings>

<typeAliases>
  <!-- 마이바티스 설정파일내에서 com.exam.member.MemberVo를 MemberVo를 MemberVo로 대신 사용 가능 -->
   <typeAlias type="com.exam.member.MemberVo" alias="MemberVo"/>
 <!-- 패키지 태그를 사용하면, 지정한 패키지 하위의 모든 클래들에 대한 별명을 자동 등록
  별명은 패기지명을 제외한 실플클래스이름으로 설정-->
   <package name="com.exam.member"/>
</typeAliases>

<!-- 실제로 사용할 데이터베이스 정보를 담은  environment의 id를  default 속성값을 지정 -->
  <environments default="development">
 <!--    데이터베이스 접속 정보를 environment 태그로 설정 -->
 <!--   개발용, 테스트용, 운영용 등 다수의 데이트베이스 정보 설정 기능-->
    <environment id="development">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
        <property name="driver" value="oracle.jdbc.OracleDriver"/>
        <property name="url" value="jdbc:oracle:thin:@localhost:1521:xe"/>
        <property name="username" value="web"/>
        <property name="password" value="web01"/>
      </dataSource>
    </environment>
  </environments>
  <mappers>
    <!--   마이바티스를 통해서 실행할 sql문들을 담고있는 xml파일을 등록 -->
    <mapper resource="batis/mappers/MemberMapper.xml"/>
  </mappers>
</configuration>